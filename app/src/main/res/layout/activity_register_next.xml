<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main"
        android:orientation="vertical"
        tools:context=".auth.RegisterNextActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-black"
                    android:text="Mentor Register"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <ImageView
                    android:id="@+id/ivLogo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginVertical="30dp"
                    android:layout_marginHorizontal="20dp"
                    android:src="@drawable/logo" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etStudentID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvAppDec"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_field"
                    android:drawableStart="@drawable/ic_baseline_person_24"
                    android:drawablePadding="15dp"
                    android:drawableTint="@color/main"
                    android:hint="Student ID"
                    android:inputType="text"
                    android:padding="20dp"
                    android:paddingStart="15dp"
                    android:singleLine="true"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="16sp"
                    android:textColor="@color/main"/>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="5">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCodeSubject1"
                        android:layout_below="@+id/etEmail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@drawable/bg_field"
                        android:drawableStart="@drawable/ic_baseline_code_24"
                        android:drawablePadding="15dp"
                        android:drawableTint="@color/teal_700"
                        android:hint="Code Subject"
                        android:inputType="text"
                        android:padding="20dp"
                        android:paddingStart="15dp"
                        android:singleLine="true"
                        android:textColorHint="@android:color/darker_gray"
                        android:textSize="16sp"
                        android:textColor="@color/main"/>

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etGrade1"
                        android:layout_below="@+id/etEmail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@drawable/bg_field"
                        android:drawableStart="@drawable/ic_baseline_grade_24"
                        android:drawablePadding="15dp"
                        android:drawableTint="@color/teal_700"
                        android:hint="Grade"
                        android:inputType="text"
                        android:padding="20dp"
                        android:paddingStart="15dp"
                        android:singleLine="true"
                        android:textColorHint="@android:color/darker_gray"
                        android:textSize="16sp"
                        android:textColor="@color/main"/>

                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="5">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCodeSubject2"
                        android:layout_below="@+id/etEmail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@drawable/bg_field"
                        android:drawableStart="@drawable/ic_baseline_code_24"
                        android:drawablePadding="15dp"
                        android:drawableTint="@color/teal_700"
                        android:hint="Code Subject"
                        android:inputType="text"
                        android:padding="20dp"
                        android:paddingStart="15dp"
                        android:singleLine="true"
                        android:textColorHint="@android:color/darker_gray"
                        android:textSize="16sp"
                        android:textColor="@color/main"/>

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etGrade2"
                        android:layout_below="@+id/etEmail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@drawable/bg_field"
                        android:drawableStart="@drawable/ic_baseline_grade_24"
                        android:drawablePadding="15dp"
                        android:drawableTint="@color/teal_700"
                        android:hint="Grade"
                        android:inputType="text"
                        android:padding="20dp"
                        android:paddingStart="15dp"
                        android:singleLine="true"
                        android:textColorHint="@android:color/darker_gray"
                        android:textSize="16sp"
                        android:textColor="@color/main"/>

                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="5">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCodeSubject3"
                        android:layout_below="@+id/etEmail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@drawable/bg_field"
                        android:drawableStart="@drawable/ic_baseline_code_24"
                        android:drawablePadding="15dp"
                        android:drawableTint="@color/teal_700"
                        android:hint="Code Subject"
                        android:inputType="text"
                        android:padding="20dp"
                        android:paddingStart="15dp"
                        android:singleLine="true"
                        android:textColorHint="@android:color/darker_gray"
                        android:textSize="16sp"
                        android:textColor="@color/main"/>

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etGrade3"
                        android:layout_below="@+id/etEmail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@drawable/bg_field"
                        android:drawableStart="@drawable/ic_baseline_grade_24"
                        android:drawablePadding="15dp"
                        android:drawableTint="@color/teal_700"
                        android:hint="Grade"
                        android:inputType="text"
                        android:padding="20dp"
                        android:paddingStart="15dp"
                        android:singleLine="true"
                        android:textColorHint="@android:color/darker_gray"
                        android:textSize="16sp"
                        android:textColor="@color/main"/>

                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="5">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCodeSubject4"
                        android:layout_below="@+id/etEmail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@drawable/bg_field"
                        android:drawableStart="@drawable/ic_baseline_code_24"
                        android:drawablePadding="15dp"
                        android:drawableTint="@color/teal_700"
                        android:hint="Code Subject"
                        android:inputType="text"
                        android:padding="20dp"
                        android:paddingStart="15dp"
                        android:singleLine="true"
                        android:textColorHint="@android:color/darker_gray"
                        android:textSize="16sp"
                        android:textColor="@color/main"/>

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etGrade4"
                        android:layout_below="@+id/etEmail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@drawable/bg_field"
                        android:drawableStart="@drawable/ic_baseline_grade_24"
                        android:drawablePadding="15dp"
                        android:drawableTint="@color/teal_700"
                        android:hint="Grade"
                        android:inputType="text"
                        android:padding="20dp"
                        android:paddingStart="15dp"
                        android:singleLine="true"
                        android:textColorHint="@android:color/darker_gray"
                        android:textSize="16sp"
                        android:textColor="@color/main"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnRegister"
                    android:layout_below="@+id/tvForgotPassword"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_field"
                    android:text="Register"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/main"
                    android:fontFamily="sans-serif-black"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</layout>